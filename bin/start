#!/usr/bin/env node

var log = require('../utils/logger')('pm2start', 'PM2 Start')
var pm2 = require('pm2');
var cpuCount = require('os').cpus().length;

// pm2.connect(function() {
//   pm2.start({
//     script    : 'app.js',         // Script to be run 
//     exec_mode : 'cluster',        // Allow your app to be clustered 
//     instances : 4,                // Optional: Scale your app by 4 
//     max_memory_restart : '500M'   // Optional: Restart your app if it reaches 100Mo 
//   }, function(err, apps) {
//     pm2.disconnect();
//   });
// });

function start() {
    pm2.connect(function () {
        pm2.start({
            script: 'app.js',
            exec_mode: 'cluster',
            name: 'movieshark-job-redis',
            instances: 1,
            max_memory_restart: '510M'
        }, function (err, apps) {
            if (err)
                log.error('ERROR PM2: ', err);

            pm2.disconnect();
        });
    });
}

if (process.env.NODE_ENV !== 'development') {
    pm2.launchBus(function (err, bus) {
        bus.on('process:exception', function () {
            start();
        });

        bus.on('log:err', function () {
            start();
        });

        bus.on('close', function () {
            start();
        });

        bus.on('pm2:kill', function () {
            start();
        });

        bus.on('process:stop', function () {
            start();
        });

        bus.on('process:exit', function () {
            start();
        });
    });
}

start();